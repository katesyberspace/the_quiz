
<div class="container">
  <h1>Game Page</h1>

  <div class="users">
    <h4>User Connected</h4>
    <ul>
      <li>User1</li>
      <li>User2</li>
    </ul>
  </div>

  <div id="timer">10s left</div>

  <main>
  <div class="question-box">This is a question</div>
  <ul class="answears">
    
  </ul>
  </main>

</div>


<script>
  const timer = document.querySelector('#timer'),
        question = document.querySelector('.question-box'),
        answ = document.querySelector('.answears');

  function start(){
    startTimer()
  }

  function startTimer(){
    var timeleft = 5;
    var startTimer = setInterval(function(){
      timer.textContent = --timeleft + 's left';
      if(timeleft === 0){
        clearInterval(startTimer);
        startGame();
      }
    },1000);
  }
  function startGame(){
    let result = fetch('https://opentdb.com/api.php?amount=1').then((res)=> {
        return res.json();
      })
      .then(resJson => {
        question.textContent = resJson.results[0].question
        generateAnswears(resJson)
      }); 
  }

  function generateAnswears (result){
    let answears = []
    answears.push(result.results[0].correct_answer)
    answears.push(...result.results[0].incorrect_answers)
    answears.forEach(elem => {
      let li = document.createElement('li')
      li.textContent = elem;
      li.classList.add('answear')
      answ.appendChild(li)
    });
  }
  answ.addEventListener('click', (e)=>{
    e.target.classList.add('clicked')
    // e.source.removeEventListener('click', arguments.callee)
  })
  
  start();
</script>

